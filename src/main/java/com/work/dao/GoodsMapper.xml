<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.work.dao.GoodsMapper">
    <resultMap id="BaseResultMap" type="com.work.model.Goods">
        <id column="g_id" property="g_id" jdbcType="INTEGER"/>
        <result column="introduction" property="introduction" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="date" property="date" jdbcType="VARCHAR" />
        <result column="goods_type" property="goodsType" jdbcType="INTEGER" />  <!-- todo 有很多细节还没确定下来-->
        <result column="picture" property="picture" jdbcType="VARCHAR" />
        <result column="money" property="money" jdbcType="INTEGER" />
        <association property="goods_type" javaType="com.work.model.Goods_type">
            <id column="gt_id" property="gt_id" jdbcType="INTEGER"></id>
            <result column="introduction" property="introduction" jdbcType="VARCHAR"></result>
            <result column="name" property="name" jdbcType="VARCHAR"></result>
        </association>
    </resultMap>
    <parameterMap type="java.util.Map" id="getPageBean">
        <parameter property="pageOffset" mode="IN" jdbcType="INTEGER"/>
        <parameter property="size" mode="IN" jdbcType="INTEGER"/>
        <parameter property="searchText" mode="IN" jdbcType="VARCHAR"/>
        <parameter property="sort" mode="IN" jdbcType="VARCHAR"/>
        <parameter property="order" mode="IN" jdbcType="VARCHAR"/>
    </parameterMap>
    <sql id="select">
        g_id,
        introduction,
        name,
        date,
        picture,
        money,
        goodsType
    </sql>
    <select id="selectAllGoods" parameterMap="getPageBean" resultMap="BaseResultMap">
        SELECT <include refid="select" />
        FROM goods
        <if test="searchText !=null">
            WHERE  name LIKE #{searchText}
            OR introduction LIKE #{searchText} OR money LIKE #{searchText}
        </if>
        <if test="sort != null">
            ORDER BY ${sort} ${order}
        </if>
        limit #{pageOffset},#{size}
    </select>
    <select id="countAll" parameterMap="getPageBean" resultType="int">
        SELECT count(g_id)
        FROM goods
        <if test="searchText !=null">
            WHERE  name LIKE #{searchText}
            OR introduction LIKE #{searchText}
        </if>
        <if test="sort != null">
            ORDER BY #{sort} #{order}
        </if>
    </select>
    <update id="updateInfo" parameterType="com.work.model.Goods">
        UPDATE
        goods
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="introduction != null">
                introduction = #{introduction},
            </if>
            <if test="goodsType != null">       <!-- todo 有很多细节还没确定下来-->
                goodsType = #{goodsType},
            </if>
            <if test="picture != null">
                picture = #{picture},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
        </set>
        WHERE g_id = #{g_id};
    </update>
    <select id="selectById" parameterType="INTEGER" resultType="com.work.model.Goods">
        SELECT <include refid="select" />
        FROM goods
        WHERE g_id = #{g_id}
    </select>
    <delete id="deleteById" parameterType="INTEGER">
        DELETE FROM goods
        WHERE g_id = #{g_id}
    </delete>
</mapper>